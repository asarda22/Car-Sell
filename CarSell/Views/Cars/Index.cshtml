@model cloudscribe.Pagination.Models.PagedResult<Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">List of Cars</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create">Add New Car</a>
    </div>
    <br /><br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Car Photo</th>
                <th>Car Details</th>
                <th>Price</th>
                <th>Seller Information</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(m=> item.ImagePath)" width="150px" height="100px" /></td>
                    <td>
                        <b>@Html.DisplayFor(m => item.Brand.Name) (@Html.DisplayFor(m => item.Year))</b><br />
                        <b>Model: </b>@Html.DisplayFor(m => item.Model.Name)<br />
                        <b>Milege: </b>@Html.DisplayFor(m => item.Mileage)
                    </td>
                    <td>@Html.DisplayFor(m => item.Price) @Html.DisplayFor(m => item.Currency)</td>
                    <td>
                        <b>Name: </b> @Html.DisplayFor(m => item.SellerName)<br />
                        <b>Email: </b>@Html.DisplayFor(m => item.SellerEmail)<br />
                        <b>Phone: </b>@Html.DisplayFor(m => item.SellerPhone)
                    </td>
                    <partial name="_OptionsPartial" model="item.Id" />
                </tr>
            }
        </table>
        <cs-pager cs-paging-pagenumber="(int)Model.PageNumber"
                  cs-paging-totalitems="(int)Model.TotalItems"
                  cs-paging-pagesize="Model.PageSize"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Cars"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        >
        </cs-pager>
    </div>
</div>





