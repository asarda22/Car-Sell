<td class="text-right">
    <div class="btn-group">
        <a type="button" class="btn btn-primary" href="@Url.Action("Edit",new { id = Model})">Edit</a>
        <form method="post" action="Delete">
            <input type="submit" onclick="if(!confirm('Are you sure you want to do delete it?')){return false}" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model" value="Delete" />
        </form>
    </div>
</td>