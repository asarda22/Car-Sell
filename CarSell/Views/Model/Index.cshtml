@model IEnumerable<CarSell.Models.Model>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">List of models</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create">Add New Model</a>
    </div>
    <br /><br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td class="text-right">
                    <div class="btn-group">
                        <a type="button" class="btn btn-primary" href="@Url.Action("Edit","Model",new { id = item.Id })">Edit</a>
                        <form method="post" action="Delete">
                            <input type="submit" onclick="if(!confirm('Are you sure you want to do delete it?')){return false}" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" value="Delete" />
                        </form>
                    </div>
                </td>
            </tr>
            }
        </table>
    </div>
</div>



