@model CarSell.Models.ModelViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br />
<h2 class="text-info">Edit model of the car</h2>
<br />
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Brands" style="font-size:x-large"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.BrandFK" asp-items="Model.SelectListItems(Model.Brands)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name" style="font-size:x-large"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>

